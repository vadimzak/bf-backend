# Production environment configuration for sample-app
# Copy this file to .env.production and configure for your environment

# Application
NODE_ENV=production
PORT=3001

# AWS Configuration (using IAM role - no credentials needed)
AWS_REGION=us-east-1

# DynamoDB Table
DYNAMODB_TABLE_NAME=sample-app-items

# Optional: Explicit AWS credentials (not recommended - use IAM role instead)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security
CORS_ORIGINS=https://sample.vadimzak.com
HELMET_ENABLE=true

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=3600